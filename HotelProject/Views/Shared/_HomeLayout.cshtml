<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <!-- Bootstrap core CSS -->
    <link href="~/HomeAssets/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/HomeAssets/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css" />
    <!-- Custom styles for this template -->
    <link href="~/HomeAssets/css/style.css" rel="stylesheet">
    <link href="~/HomeAssets/fonts/antonio-exotic/stylesheet.css" rel="stylesheet">
    <link rel="stylesheet" href="~/HomeAssets/css/lightbox.min.css">
    <link href="~/HomeAssets/css/responsive.css" rel="stylesheet">
    
</head>
<body>
    <div id="page">
    <!--header--->
    <header class="header-container">
        <div class="container">
            <div class="top-row">
                <div class="row">
                    <div class="col-md-2 col-sm-6 col-xs-6">
                        <div id="logo">
                                <a asp-action="Index"><span>@ViewBag.LogoPart1</span>@ViewBag.LogoPart2</a>
                        </div>
                    </div>
                    <div class="col-sm-6 visible-sm">
                        <div class="text-right"><button type="button" class="book-now-btn">Book Now</button></div>
                    </div>
                    <div class="col-md-8 col-sm-12 col-xs-12 remove-padd">
                        <nav class="navbar navbar-default">
                            <div class="navbar-header page-scroll">
                                <button data-target=".navbar-ex1-collapse" data-toggle="collapse" class="navbar-toggle" type="button">
                                    <span class="sr-only">Toggle navigation</span>
                                    <span class="icon-bar"></span>
                                    <span class="icon-bar"></span>
                                    <span class="icon-bar"></span>
                                </button>

                            </div>
                            <div class="collapse navigation navbar-collapse navbar-ex1-collapse remove-space">
                                <ul class="list-unstyled nav1 cl-effect-10">
                                    <li><a data-hover="Home" asp-action="Index" class="active"><span>Home</span></a></li>
                                        <li><a data-hover="Hotel" asp-action="Hotels"><span>Hotel</span></a></li>
                                    <li><a data-hover="Contact Us" asp-controller="Home" asp-action="ContactUs"><span>contact Us</span></a></li>
                                        <li><a data-hover="About Us" asp-action="AboutUs"><span>About Us</span></a></li>
                                        @if (Context.Session.GetInt32("UserId") != null)
                                        {
                                            <li><a data-hover="Add Testemonial" asp-action="AddTestimonial" ><span>Add Testemonial</span></a></li>
                                        }
                                    </ul>

                            </div>
                        </nav>
                    </div>
                        <div class="col-md-2 col-sm-4 col-xs-12 hidden-sm">
                            <div class="text-right">
                                @if (Context.Session.GetInt32("UserId") != null)
                                {
                                    <a href="@Url.Action("MyProfile", "Home")" class="btn btn-info">My Profile</a>
                                    <a href="@Url.Action("Logout", "LoginsAndRegister")" class="btn btn-primary">Logout</a>
                                    <a href="@Url.Action("Hotels", "Home")" class="btn book-now-btn">Book Now</a>
                                    <a href="@Url.Action("MyReservations", "Home")" class="btn book-now-btn mt-5">My Reservations</a>

                                }
                                else
                                {
                                    <a href="@Url.Action("Login", "LoginsAndRegister")" class="btn btn-primary">Login</a>
                                    <a href="@Url.Action("Register", "LoginsAndRegister")" class="btn btn-secondary">Register</a>
                                    <a href="@Url.Action("Login", "LoginsAndRegister")" class="btn book-now-btn">Book Now</a>
                                }
                            </div>
                        </div>
                    </div>
            </div>
        </div>
    </header>
    <div>
        @RenderBody()
    </div>
    <!-- Footer start-->
        <footer>
            <div class="container">
                <div class="row">
                    <div class="col-md-3 col-sm-6 col-xs-12 width-set-50">
                        <div class="footer-details">
                            <h4>Get in touch</h4>
                            <ul class="list-unstyled footer-contact-list">
                                <li>
                                    <i class="fa fa-map-marker fa-lg"></i>
                                    <p>@ViewBag.Address</p> <!-- Corrected 'Adress' to 'Address' -->
                                </li>
                                <li>
                                    <i class="fa fa-phone fa-lg"></i>
                                    <p><a href="tel:@ViewBag.PhoneNumber">@ViewBag.PhoneNumber</a></p> <!-- Corrected the reference to display the phone number -->
                                </li>
                                <li>
                                    <i class="fa fa-envelope-o fa-lg"></i>
                                    <p><a href="mailto:@ViewBag.Email">@ViewBag.Email</a></p> <!-- Corrected the mailto link -->
                                </li>
                            </ul>
                            <div class="footer-social-icon">
                                <a href="@ViewBag.Facebook"><i class="fa fa-facebook"></i></a>
                                <a href="@ViewBag.Twitter"><i class="fa fa-twitter"></i></a>
                                <a href="@ViewBag.Instagram"><i class="fa fa-instagram"></i></a>
                                <a href="@ViewBag.Youtube"><i class="fa fa-youtube-play"></i></a>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3 col-sm-6 col-xs-12 width-50 width-set-50">
                        <div class="footer-details">
                            <h4>Explore</h4>
                            <ul class="list-unstyled footer-links">
                                <li class="active"><a href="#">Home</a></li> <!-- Added missing href attribute -->
                                <li><a href="about.html">About</a></li>
                                <li><a href="rooms.html">Rooms</a></li>
                                <li><a href="gallery.html">Gallery</a></li>
                                <li><a href="#">Dining</a></li> <!-- Corrected 'Dinning' to 'Dining' -->
                                <li><a href="news.html">News</a></li>
                                <li><a href="contact.html">Contact</a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-md-6 col-sm-12 col-xs-12">
                        <div class="footer-details">
                            <div class="row">
                                <div class="instagram-images">
                                    <div id="instafeed"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="copyright">
                    @ViewBag.CopyRightStatement <!-- Corrected 'CopyRightStatment' to 'CopyRightStatement' -->
                </div>

            </div>
        </footer>

    <!-- Footer end-->
    </div>
    <script src="~/HomeAssets/js/jquery.min.js" type="text/javascript"></script>
    <script src="~/HomeAssets/js/bootstrap.min.js" type="text/javascript"></script>
    <script src="~/HomeAssets/js/lightbox-plus-jquery.min.js" type="text/javascript"></script>
    <script src="~/HomeAssets/js/instafeed.min.js" type="text/javascript"></script>
    <script src="~/HomeAssets/js/custom.js" type="text/javascript"></script>
</body>
</html>
