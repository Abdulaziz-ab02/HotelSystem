@model IEnumerable<Testimonial>
@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";

}

<div class="text-center">
    <div id="myCarousel1" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->

        <ol class="carousel-indicators">
            <li data-target="#myCarousel1" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel1" data-slide-to="1"></li>
            <li data-target="#myCarousel1" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
            <div class="item active">
                <img src="~/HomeAssets/images/banner.png" style="width:100%; height: 500px" alt="First slide">
                <div class="carousel-caption">
                    <h1>vacayhome<br> spa & Resort</h1>
                </div>
            </div>
            <div class="item">
                <img src="~/HomeAssets/images/banner2.png" style="width:100%; height: 500px" alt="Second slide">
                <div class="carousel-caption">
                    <h1>vacayhome<br> spa & Resort</h1>
                </div>
            </div>
            <div class="item">
                <img src="~/HomeAssets/images/banner3.png" style="width:100%; height: 500px" alt="Third slide">
                <div class="carousel-caption">
                    <h1>vacayhome<br> spa & Resort</h1>
                </div>
            </div>

        </div>
        <a class="left carousel-control" href="#myCarousel1" data-slide="prev">
            <img src="@Url.Content("~/HomeAssets/images/icons/left-arrow.png")"
                 onmouseover="this.src = '@Url.Content("~/HomeAssets/images/icons/left-arrow-hover.png")'"
                 onmouseout="this.src = '@Url.Content("~/HomeAssets/images/icons/left-arrow.png")'"
                 alt="left">
        </a>

        <a class="right carousel-control" href="#myCarousel1" data-slide="next">
            <img src="@Url.Content("~/HomeAssets/images/icons/right-arrow.png")"
                 onmouseover="this.src = '@Url.Content("~/HomeAssets/images/icons/right-arrow-hover.png")'"
                 onmouseout="this.src = '@Url.Content("~/HomeAssets/images/icons/right-arrow.png")'"
                 alt="right">
        </a>

    </div>
    <section class="blog-block-slider">
        <div class="blog-block-slider-fix-image">
            <div id="myCarousel2" class="carousel slide" data-ride="carousel">
                <div class="container">
                    <!-- Wrapper for slides -->
                    <ol class="carousel-indicators">
                        @for (int i = 0; i < Model.Count(); i++)
                        {
                            <li data-target="#myCarousel2" data-slide-to="@i" class="@(i == 0 ? "active" : "")"></li>
                        }
                    </ol>
                    <div class="carousel-inner" role="listbox">
                        @foreach (var testimonial in Model)
                        {
                            <div class="item @(testimonial == Model.First() ? "active" : "")">
                                <div class="blog-box">
                                    <p>@testimonial.Contents</p>
                                </div>
                                <div class="blog-view-box">
                                    <div class="media">
                                       
                                        <div class="media-body">
                                            <h3 class="media-heading blog-title">@testimonial.Users?.Firstname @testimonial.Users.Lastname</h3>
                                            <h5 class="blog-rev">@testimonial.Rating Stars</h5>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
        <div class="clearfix"></div>
    </section>

</div>
