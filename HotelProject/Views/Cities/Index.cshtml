@model IEnumerable<HotelProject.Models.City>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Cityname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cityimage)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Cityname)
            </td>
            <td>
                <img src=@Url.Content("~/Images/Cities/" + item.Cityimage) asp-append-version="true" style="border-radius:20%;"
                         width="100" height="100" />
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Cityid">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Cityid">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Cityid">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
