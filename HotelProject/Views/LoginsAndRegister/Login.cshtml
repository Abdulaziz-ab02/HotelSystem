@model HotelProject.Models.Userlogin
@{
    Layout = null;
}
<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="~/LoginAndRegister/fonts/icomoon/style.css">
    <link rel="stylesheet" href="~/LoginAndRegister/css/owl.carousel.min.css">
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/LoginAndRegister/css/bootstrap.min.css">
    <!-- Style -->
    <link rel="stylesheet" href="~/LoginAndRegister/css/style.css">

    <title>Login</title>
</head>
<body>
    <div class="d-lg-flex half">
        <div class="bg order-1 order-md-2" style="background-image: url('@Url.Content("~/LoginAndRegister/images/bg_1.jpg")');"></div>
        <div class="contents order-2 order-md-1">
            <div class="container">
                <div class="row align-items-center justify-content-center">
                    <div class="col-md-7">
                        <h3>Login to <strong>Your Website</strong></h3>
                        <p class="mb-4">Please enter your credentials to log in.</p>

                        <form asp-action="Login" method="POST">
                            @Html.AntiForgeryToken()
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                            <div class="form-group first">
                                <label for="Username">Username</label>
                                <input asp-for="Username" type="text" class="form-control" placeholder="Your Email" id="username">
                                <span asp-validation-for="Username" class="text-danger"></span>
                            </div>

                            <div class="form-group last mb-3">
                                <label for="Password">Password</label>
                                <input asp-for="PasswordHash" type="password" class="form-control" placeholder="Your Password" id="password">
                                <span asp-validation-for="PasswordHash" class="text-danger"></span>
                            </div>

                            <div class="d-flex mb-5 align-items-center">
                                <label class="control control--checkbox mb-0">
                                    <span class="caption">Remember me</span>
                                    <input type="checkbox" checked="checked" />
                                    <div class="control__indicator"></div>
                                </label>
                                <span class="ml-auto"><a href="#" class="forgot-pass">Forgot Password</a></span>
                            </div>

                            <input type="hidden" name="returnUrl" value="@ViewData["ReturnUrl"]" />
                            <input type="submit" name="signin" id="signin" value="Log In" class="btn btn-block btn-primary">
                        </form>

                        <div class="mt-3 text-center">
                            <p>Don't have an account? <a href="@Url.Action("Register", "LoginsAndRegister")">Register here</a>.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="~/LoginAndRegister/js/jquery-3.3.1.min.js"></script>
    <script src="~/LoginAndRegister/js/popper.min.js"></script>
    <script src="~/LoginAndRegister/js/bootstrap.min.js"></script>
    <script src="~/LoginAndRegister/js/main.js"></script>
</body>
</html>
